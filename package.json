{
  "name": ".",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build:shared-ui": "ng build shared-ui",
    "watch:shared-ui": "ng build shared-ui --watch",
    "dev": "concurrently \"npm run watch:shared-ui\" \"npm run start\"",
    "start": "concurrently \"npm run start:remotes\" \"npm run start:shell:wait\"",
    "start:remotes": "concurrently \"npm run start:admin\" \"npm run start:employee\" \"npm run start:researcher\"",
    "start:shell": "ng serve shell --port 4200",
    "start:shell:wait": "wait-on http://localhost:4201 http://localhost:4202 http://localhost:4203 && npm run start:shell",
    "start:admin": "ng serve remote-admin --port 4201",
    "start:employee": "ng serve remote-employee --port 4202",
    "start:researcher": "ng serve remote-researcher --port 4203",
    "build:all": "ng build shared-ui && ng build remote-admin && ng build remote-employee && ng build remote-researcher && ng build shell",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.17",
    "@angular/common": "^19.2.17",
    "@angular/compiler": "^19.2.17",
    "@angular/core": "^19.2.17",
    "@angular/forms": "^19.2.17",
    "@angular/platform-browser": "^19.2.17",
    "@angular/platform-browser-dynamic": "^19.2.17",
    "@angular/router": "^19.2.17",
    "@softarc/native-federation-node": "^2.0.10",
    "es-module-shims": "^1.5.12",
    "lucide-angular": "^0.562.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-architects/native-federation": "^19.0.23",
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.17",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "10.4",
    "concurrently": "^8.2.2",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.2",
    "postcss": "8.4",
    "tailwindcss": "3.4",
    "typescript": "~5.6.0"
  }
}
